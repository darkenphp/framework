{
    "require": {
        "darkenphp/framework": "dev-main"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Build\\" : ".build"
        }
    },
    "scripts": {
        "dev": "@php darken dev",
        "build": "@php darken build",
        "watch": "@php darken watch",
        "kill" : "kill $(ps aux | grep '[p]hp' | awk '{print $2}')"
    },
    "config": {
        "process-timeout": 0
    }
}
